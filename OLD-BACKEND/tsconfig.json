{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
